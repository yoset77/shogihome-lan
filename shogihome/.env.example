# Web server port
PORT=8080

# Binding address (0.0.0.0 to allow access from LAN)
BIND_ADDRESS=0.0.0.0

# Remote Engine Configuration
REMOTE_ENGINE_HOST=127.0.0.1
REMOTE_ENGINE_PORT=4082

# Engine Connection Protection Timeout in seconds (default: 60)
# Time to keep the engine process alive after client disconnection
ENGINE_CONNECTION_PROTECTION_TIMEOUT=60

# Allowed origins for WebSocket connection (comma separated)
# If empty, only http://localhost:PORT is allowed.
# Example: http://localhost:8080,http://192.168.1.10:8080
ALLOWED_ORIGINS=